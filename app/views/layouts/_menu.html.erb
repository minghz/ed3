<div id="menu">
  <div class="menu-block"> <%= link_to "Home", posts_path %> </div>
    <% if signed_in? %>
      <div class="menu-block"> <%= link_to "Profile", current_user %> </div>
      <div class="menu-block"> <%= link_to "Settings", edit_user_path(current_user) %> </div>
      <div class="menu-block"> <%= link_to "Sign out", signout_path, method: "delete" %> </div>
      <% if current_user.admin? %>
        <div class="menu-block-admin">| Admin Space: <%= link_to "Users", users_path %> |</div>
        <div class="menu-block-admin"> </div>
      <% end %>
      <% else %>
      <div class="menu-block"> <%= link_to "Sign in", signin_path %> </div>
    <% end %>
  </div>
