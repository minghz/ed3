<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<%# flash is just a standard error message. Its quite useful to put it
inside the default application template so it is recyclable throughtout
every page %>

<% flash.each do |key, value| %>
  <p><%= value %></p>
<% end %>

<%= form_tag sessions_path do %>
  <div class="field">
    E-mail: <br />
    <%= text_field_tag 'email'%>
  </div>
  <div class="field">
    Password: <br />
    <%= password_field_tag "password" %>
  </div>
  <div class="actions">
    <%= submit_tag "Sign In", :class => "submit" %>
  </div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %></p>
<p>Forgot Password? <%= link_to "Retrieve It!", retrievals_path %></p>

