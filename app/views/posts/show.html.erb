<div id="header">
  <img src="/assets/logo.jpg" alt="ed3 logo">
</div>

<div id="content">
  <p id="notice"><%= notice %></p>

  <div id="summary">
    <p>
      <h2><%= @post.title %></h2>
    </p>

    <p>
      <b>Author:</b>
      <%= @post.name %>
    </p>

    <p>
      <b>Tags:</b>
      <%= join_tags(@post) %>
    </p>

    <h3>Comments</h3>
    <%= render @post.comments %>

    <h3>Leave a Comment:</h3>
    <%= render "comments/form" %>

  </div>
  
  <div id="data">
    <p>
      <b>Content:</b>
      <%= @post.content %>
    </p>

    <br />

    <%= link_to 'Edit', edit_post_path(@post) %> |
    <%= link_to 'Back', posts_path %>
  </div>
 

</div>

<div id="footer">
  <p>Copyright 2012</p>
</div>
