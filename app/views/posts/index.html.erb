<div id="content">

  <div id="posts">  
    <%= will_paginate %>
    <table>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.content %></td>
        
        <% if signed_in? && current_user.admin? %> 
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
        <% end %>
      </tr>
    <% end %>
    </table>
    <%= will_paginate %>
    
    <br />
  </div>
</div>
