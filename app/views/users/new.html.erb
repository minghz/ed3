<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div id="signup">

  <%= form_for(@user) do |f| %>

<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited user signup:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <div class="field">
      <%= f.label :name %></br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %></br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %></br>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirmation" %></br>
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit "Create my account", :class => 'submit' %>
    </div>
  <% end %>

</div>
